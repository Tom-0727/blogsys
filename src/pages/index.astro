<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			/* Hero section styles */
			.hero-section {
				position: relative;
				padding: 6rem 1rem;
				background-color: #aa6c1b;
				background-image: linear-gradient(to bottom, rgba(var(--gray-light), 0.7), rgba(255, 255, 255, 0.9));
				text-align: center;
				margin-bottom: 2rem;
				overflow: hidden;
			}

			.hero-pattern {
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background-image: radial-gradient(rgba(var(--gray), 0.1) 1px, transparent 1px);
				background-size: 20px 20px;
				z-index: -1;
			}

			.hero-content {
				max-width: 800px;
				margin: 0 auto;
				position: relative;
				z-index: 2;
			}

			.hero-title {
				font-size: 3.5rem;
				margin-bottom: 1rem;
				line-height: 1.2;
			}

			.hero-subtitle {
				font-size: 1.5rem;
				color: rgb(var(--gray));
				margin-bottom: 2rem;
			}

			.hero-buttons {
				display: flex;
				gap: 1rem;
				justify-content: center;
				margin-top: 2rem;
			}

			.hero-btn {
				display: inline-block;
				padding: 1rem 2rem;
				border-radius: 4px;
				font-weight: 700;
				font-size: 1.1rem;
				text-decoration: none;
				transition: transform 0.2s, box-shadow 0.2s;
			}

			.hero-btn:hover {
				transform: translateY(-2px);
				box-shadow: 0 4px 8px rgba(var(--gray), 25%);
			}

			.btn-primary {
				background-color: var(--accent);
				color: white;
			}

			.btn-secondary {
				background-color: white;
				color: var(--accent);
				border: 2px solid var(--accent);
			}

			/* Featured posts section */
			.section-title {
				font-size: 2rem;
				margin: 3rem 0 2rem;
				text-align: center;
			}

			.section-subtitle {
				text-align: center;
				margin-top: -1rem;
				margin-bottom: 2rem;
				color: rgb(var(--gray));
			}

			.featured-posts {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
				gap: 2rem;
				margin-bottom: 3rem;
			}

			.post-card {
				border-radius: 8px;
				overflow: hidden;
				box-shadow: 0 4px 6px rgba(var(--gray), 15%);
				background-color: white;
				transition: transform 0.2s ease, box-shadow 0.2s ease;
			}

			.post-card:hover {
				transform: translateY(-5px);
				box-shadow: var(--box-shadow);
			}

			.post-card a {
				text-decoration: none;
				color: inherit;
			}

			.post-image {
				width: 100%;
				height: 200px;
				object-fit: cover;
			}

			.post-content {
				padding: 1.5rem;
			}

			.post-title {
				margin: 0;
				font-size: 1.4rem;
				line-height: 1.3;
				margin-bottom: 0.5rem;
				color: rgb(var(--black));
			}

			.post-date {
				display: block;
				margin-bottom: 1rem;
				color: rgb(var(--gray));
